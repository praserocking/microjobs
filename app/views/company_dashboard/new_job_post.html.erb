<div class="jumbotron jumbotron-sm">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <h1 class="h1">
                    Post a Job</h1>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-md-6">
                        <%= form_tag("/post_a_job",method: "post") do %>
                        <div class="form-group">
                            <label for="job-type">
                                Job Type</label>
                            <select id="job-type" name="job_type" class="form-control" required="required">
                                <option value="na" selected>Choose One:</option>
                                <option value="construction">Construction</option>
                                <option value="security">Security</option>
                                <option value="delivery">Delivery</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="daterange">
                                Job Duration</label>
                            <div class="input-group">
                            <input type="text" class="form-control" name="daterange" value="01/01/2015 1:30 PM - 01/01/2015 2:00 PM" />
                            <span class="input-group-addon"><span style class="glyphicon glyphicon-calendar"></span>
                            </span>
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <label for="emp-num">
                                Number of Employees</label>
                            <div class="input-group spinner" data-trigger="spinner">
                              <input type="text" class="form-control" value="1" data-rule="quantity" name="quantity">
                              <div class="input-group-addon">
                                <a href="javascript:;" class="spin-up" data-spin="up"><i class="icon-sort-up"></i></a>
                                <a href="javascript:;" class="spin-down" data-spin="down"><i class="icon-sort-down"></i></a>
                              </div>
                            </div>
                            <div class="input-group">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="job-budget">
                                Job Budget</label>
                            <div class="input-group spinner" data-trigger="spinner">
                              <input type="text" class="form-control" value="1" data-rule="currency" name="budget">
                              <div class="input-group-addon">
                                <a href="javascript:;" class="spin-up" data-spin="up"><i class="icon-sort-up"></i></a>
                                <a href="javascript:;" class="spin-down" data-spin="down"><i class="icon-sort-down"></i></a>
                              </div>
                            </div>
                            <div class="input-group">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="job-loc">
                                Job Location</label>
                            <select id="job-loc" name="job-loc" class="form-control" required="required" name="job_loc">
                                <option value="na" selected>Choose One:</option>
                                <option value="blr">Bangalore</option>
                                <option value="chn">Chennai</option>
                            </select>
                        </div>
                        
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="job-desc">
                                Job Description</label>
                            <textarea style="resize:none;" name="job_desc" id="job-desc" class="form-control" rows="15" cols="24" required="required"
                                placeholder="A brief overview about the job"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary pull-right" id="btnContactUs">
                            Post Job</button>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

</body>
</html>