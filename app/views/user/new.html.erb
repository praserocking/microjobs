<% @page_title = "UserAuth | Signup" %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1>SignUp</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag("/signup",method: "post") do %>
      <%= label_tag("Name") %>
      <%= text_field_tag(:name) %>
      <br/>
      <%= label_tag("Mobile Number") %>
      <%= text_field_tag(:mob_num) %>
      <br/>
      <%= label_tag("Preferred Job Type") %>
      <br/>
      <%= label_tag("Preferred Job Type1") %>
      <%= check_box_tag "preferred_jobs[]","Preferred Job Type1" %>
      <br/>
      <%= label_tag("Preferred Job Type2") %>
      <%= check_box_tag "preferred_jobs[]","Preferred Job Type2" %>
      <br/>
      <%= label_tag("Preferred Job Location") %>
      <br/>
      <%= label_tag("Preferred Job Location1") %>
      <%= check_box_tag "preferred_location[]","Preferred Job Location1" %>
      <br/>
      <%= label_tag("Preferred Job Location2") %>
      <%= check_box_tag "preferred_location[]","Preferred Job Location2" %>
      <br/>
      <%= label_tag("Password") %>
      <%= password_field_tag(:password) %>
      <br/>
      <%= label_tag("Password_confirmation") %>
      <%= password_field_tag(:password_confirmation) %>
      <br/>
      <%= submit_tag("SignUp") %>
      <%end%>
  </div>
</div>


